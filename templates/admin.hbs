{{#extend "index"}}
{{#content "content"}}
<table class="table">
    <thead>
        <th>
            Id
        </th>
        <th>
            Код
        </th>
        <th>
            Поймано
        </th>
    </thead>
    <tbody>
        {{#each leaderboard}}
        <tr>
            {{#if receivedprize}}
            <td colspan="2"><s>{{emojies}}</s></td>
            <td>
                <s>{{capturedamount}}</s>
            </td>
            {{else}}
            <td>
                {{id}}
            </td>
            <td>
                {{emojies}}
            </td>
            <td>
                {{capturedamount}}
            </td>
            {{/if}}
        </tr>
        {{/each}}
    </tbody>
</table>
{{/content}}
{{/extend}}